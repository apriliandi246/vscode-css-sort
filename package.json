{
	"name": "sort-it",
	"displayName": "sort-it",
	"description": "Sort your css properties....",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sort-it.min",
		"onCommand:sort-it.max"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
			"command": "sort-it.min",
			"title": "sort-it-min"
		}, {
			"command": "sort-it.max",
			"title": "sort-it-max"
		}],
		"menus": {
			"commandPalette": [
				{
					"command": "sort-it.min",
					"group": "sort-it@1",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@2",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@3",
					"when": "resourceLangId == svelte && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@4",
					"when": "resourceLangId == svelte && editorHasSelection"
				}
			],
			"editor/context": [
				{
					"command": "sort-it.min",
					"group": "sort-it@1",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@2",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@3",
					"when": "resourceLangId == svelte && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@4",
					"when": "resourceLangId == svelte && editorHasSelection"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
