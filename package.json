{
	"name": "css-sort",
	"displayName": "css-sort",
	"publisher": "apriliandi246",
	"description": "Sort your css properties....",
	"version": "0.6.0",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"css",
		"css sort"
	],
	"activationEvents": [
		"onCommand:sort-it.min",
		"onCommand:sort-it.max"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sort-it.min",
				"title": "sort-it-min"
			},
			{
				"command": "sort-it.max",
				"title": "sort-it-max"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "sort-it.min",
					"group": "sort-it@1",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@2",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@3",
					"when": "resourceLangId == svelte && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@4",
					"when": "resourceLangId == svelte && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@5",
					"when": "resourceLangId == html && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@6",
					"when": "resourceLangId == html && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@7",
					"when": "resourceLangId == vue && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@8",
					"when": "resourceLangId == vue && editorHasSelection"
				}
			],
			"editor/context": [
				{
					"command": "sort-it.min",
					"group": "sort-it@1",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@2",
					"when": "resourceLangId == css && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@3",
					"when": "resourceLangId == svelte && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@4",
					"when": "resourceLangId == svelte && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@5",
					"when": "resourceLangId == html && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@6",
					"when": "resourceLangId == html && editorHasSelection"
				},
				{
					"command": "sort-it.min",
					"group": "sort-it@7",
					"when": "resourceLangId == vue && editorHasSelection"
				},
				{
					"command": "sort-it.max",
					"group": "sort-it@8",
					"when": "resourceLangId == vue && editorHasSelection"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.0",
		"@types/node": "^12.19.9",
		"@types/vscode": "^1.49.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"csstree-validator": "^2.0.0"
	}
}
